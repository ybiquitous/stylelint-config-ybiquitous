{
  "name": "stylelint-config-ybiquitous",
  "version": "0.0.1",
  "description": "My shareable config for stylelint",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "MIT",
  "repository": "ybiquitous/stylelint-config-ybiquitous",
  "main": "index.js",
  "files": [
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "stylelint": ">=13.6.1",
    "stylelint-a11y": ">=1.2.3",
    "stylelint-config-standard": ">=20.0.0",
    "stylelint-order": ">=4.1.0"
  },
  "devDependencies": {
    "eslint-config-ybiquitous": "^12.7.0",
    "stylelint": "^13.12.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "tape": "^5.2.2",
    "ybiq": "^12.0.0"
  },
  "scripts": {
    "test": "node test.js",
    "test:watch": "echo \"unsupported.\" && exit 1",
    "test:coverage": "echo \"unsupported.\" && exit 1",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "prettier": "prettier --ignore-path .gitignore .",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "prerelease": "git switch main && git pull && npm ci && npm run clean && npm test && npm run lint && npm run clean",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run",
    "clean": "git clean -dx --force --exclude=node_modules"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-commit": "npm run release:dry-run"
    }
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": "eslint --fix",
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/node"
    ],
    "overrides": [
      {
        "files": [
          "index.js"
        ],
        "rules": {
          "sort-keys": "error"
        }
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        100
      ]
    }
  },
  "standard-version": {
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    },
    "sign": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "lint-no-heading-punctuation",
      [
        "lint-list-item-bullet-indent",
        false
      ],
      [
        "lint-list-item-indent",
        false
      ],
      "validate-links"
    ]
  },
  "stylelint": {
    "extends": "./index.js"
  }
}
